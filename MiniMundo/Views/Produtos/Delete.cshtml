@model MiniMundo.Models.Produto

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstoqueAtual)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstoqueAtual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinEstoque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FornecedorID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FornecedorID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoID" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-primary">Voltar para Lista</a>
    </form>
</div>
