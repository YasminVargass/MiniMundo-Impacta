@model MiniMundo.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoID" />
            <div class="col-12 form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <div class="col form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label asp-for="EstoqueAtual" class="control-label"></label>
                    <input asp-for="EstoqueAtual" class="form-control" />
                    <span asp-validation-for="EstoqueAtual" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="MinEstoque" class="control-label"></label>
                    <input asp-for="MinEstoque" class="form-control" />
                    <span asp-validation-for="MinEstoque" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label asp-for="CategoriaID" class="control-label"></label>
                    <input asp-for="CategoriaID" class="form-control" />
                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="FornecedorID" class="control-label"></label>
                    <input asp-for="FornecedorID" class="form-control" />
                    <span asp-validation-for="FornecedorID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary mt-2">Voltar para Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
